# SoapBoxx Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (Required for transcription and AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Google Custom Search Engine ID (For web search and research)
GOOGLE_CSE_ID=your_google_cse_id_here

# Google API Key (For Google Custom Search API)
GOOGLE_API_KEY=your_google_api_key_here

# News API Key (For Scoop tab - news integration)
NEWS_API_KEY=your_news_api_key_here

# Twitter API Keys (For social media integration)
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Spotify API Keys (For music integration - background music, royalty-free tracks)
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# YouTube API Key (For video content integration)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Azure Speech Services (Alternative to OpenAI for transcription)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_speech_region_here

# ElevenLabs API Key (For text-to-speech)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# AssemblyAI API Key (For advanced audio processing)
ASSEMBLYAI_API_KEY=your_assemblyai_api_key_here

# Alternative Podcast-Specific APIs (Optional)
# Apple Podcasts API (if available) - For podcast directory and analytics
APPLE_PODCASTS_API_KEY=your_apple_podcasts_api_key_here

# Google Podcasts API (if available) - For podcast discovery
GOOGLE_PODCASTS_API_KEY=your_google_podcasts_api_key_here

# Podchaser API - For podcast database and analytics
PODCHASER_API_KEY=your_podchaser_api_key_here

# Listen Notes API - For podcast search and discovery
LISTEN_NOTES_API_KEY=your_listen_notes_api_key_here 